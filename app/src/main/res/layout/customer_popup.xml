<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="#ffffff"
    android:paddingRight="8dp"
    android:paddingLeft="8dp">

    <RelativeLayout
        android:id="@+id/search_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/searchTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:paddingLeft="@dimen/search_view_text_padding"
            android:paddingRight="@dimen/search_view_text_padding"
            android:singleLine="true"
            android:textColor="#212121"
            android:textColorHint="#727272"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/action_up_btn"
            style="@style/MSV_ImageButton"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_search_grey"/>

        <ImageButton
            android:id="@+id/action_empty_btn"
            style="@style/MSV_ImageButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_navigation_close"
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#10000000"
            android:backgroundTint="#10000000"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listItems"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Close"
          android:id="@+id/close"
          />


</LinearLayout>
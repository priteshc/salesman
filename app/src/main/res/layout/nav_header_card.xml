<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="190dp"
android:background="@color/DeepSkyBlue"
android:orientation="vertical"
    >

<de.hdodenhof.circleimageview.CircleImageView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageView"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:src="@drawable/draweic"
    app:border_color="#FF000000"
    android:layout_marginLeft="24dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="24dp" />

<com.example.dec.mylocation.customfonts.MavenProTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Aqunomics"
    android:textSize="18sp"
    android:textColor="#FFF"
    android:textStyle="bold"
    android:gravity="left"
    android:layout_marginLeft="15dp"
    android:paddingBottom="4dp"
    android:id="@+id/tvBranchName"
    android:layout_above="@+id/tvSemName"
    android:layout_alignLeft="@+id/imageView"
    android:layout_alignStart="@+id/imageView" />

<com.example.dec.mylocation.customfonts.MavenProTextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/tvSemName"
    android:gravity="left"
    android:layout_marginBottom="8dp"
    android:textSize="14sp"
    android:textColor="#fff"
    android:layout_alignParentBottom="true"
    android:layout_alignLeft="@+id/tvBranchName"
    android:layout_alignStart="@+id/tvBranchName" />

</RelativeLayout>

